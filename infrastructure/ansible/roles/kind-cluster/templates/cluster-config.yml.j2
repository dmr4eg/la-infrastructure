kind: Cluster
apiVersion: kind.x-k8s.io/v1alpha4
nodes:
{% for n in range(control_nodes|int) %}
  - role: control-plane
    kubeadmConfigPatches:
      - |
        kind: InitConfiguration
        nodeRegistration:
          kubeletExtraArgs:
            node-labels: "custom-control={{ n }}"
    extraPortMappings:
      - containerPort: 30080
        hostPort: 80
        protocol: TCP
      - containerPort: 30443
        hostPort: 443
        protocol: TCP
{% endfor %}
{% for n in range(worker_nodes|int) %}
  - role: worker
{% endfor %}
