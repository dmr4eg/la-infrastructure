apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: "{{ pg_chart_name }}"
  namespace: {{ argocd_namespace }}
spec:
  project: default
  destination:
    namespace: "{{ pg_chart_name }}"
    server: "https://kubernetes.default.svc"

  sources:
    - repoURL: "https://charts.bitnami.com/bitnami"
      chart: "bitnami"
      targetRevision: "{{ pg_chart_version }}"
      ref: "postgresChart"

    - repoURL: "{{ repo_url }}"
      targetRevision: main
      path: "{{ pg_chart_path }}"
      helm:
        releaseName: "{{ pg_release_name }}"
        valueFiles:
          - "postgres-values.yaml"


  syncPolicy:
    syncOptions:
      - CreateNamespace=true
    automated:
      selfHeal: true
      prune: true
