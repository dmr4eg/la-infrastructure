apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: argocd-application-set
  namespace: {{ argocd_namespace }}
spec:
  goTemplate: true
  goTemplateOptions: ["missingkey=error"]
  generators:
    - list:
        elements:
{% for env in environments %}
          - cluster: {{ env.name }}
            namespace: {{ env.name }}
            environment: {{ env.name }}
            chart_version: "24.0.9"
            release_name: "wordpress-{{ env.name }}"
            path: {{ env.path }}
            repo: {{ repo_url }}
            revision: main
            values_file: "{{ env.path }}/wordpress-values.yml"
{% endfor %}
  template:
{% raw %}
    metadata:
      name: '{{ .cluster }}-application'
    spec:

      project: default
      destination:
        namespace: "{{ .namespace }}"
        server: "https://kubernetes.default.svc"

      sources:
        - repoURL: "{{ .repo }}"
          targetRevision: "{{ .revision }}"
          ref: gitlab_repo

        - repoURL: registry-1.docker.io/bitnamicharts
          chart: "wordpress"
          targetRevision: "{{ .chart_version }}"
          helm:
            releaseName: "{{ .release_name }}"
            valueFiles:
              - "$gitlab_repo/{{ .values_file }}"

      syncPolicy:
        syncOptions:
          - CreateNamespace=true
        automated:
          selfHeal: true
          prune: true
{% endraw %}
